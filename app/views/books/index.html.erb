<div class="row index-books">

  <% @books.each_with_index do |book,index| %>
    <div class="col-2 book" align="center">
          <div class="book-title">

         <a href="/books/<%= book.id %>"><%= book.title %></a>

        </div>

          <div class="book-author"> <%= book.author %></div>

      </div>

        <div class="col-2 img-book" align="center">
          <img data-title="<%= book.title %>"  data-author="<%= book.author %>" class="book-img" id="<%= index %>" src="" alt="book" width="60%">
        </div>
      
  <% end %>






<%= link_to 'New book', new_book_path %>

</div>

<div class="apple_pagination">
  <p>Now let's render us some pagination!</p>
  <%= will_paginate @book %>
</div>

<script type="text/javascript">
   var books=loadBooks();

</script>
