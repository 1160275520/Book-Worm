<table>
<% @books.each do |book| %>
  <tr>
    <td><a href="/books/<%= book.id %>"><%= book.title %></a></td>
    <td><%= book.author %></td>
    <% if current_user.admin || current_user == book.owner_id %>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?',
                                  :method => :delete %></td>
    <% end %>  
     <td><img id="book_img" src="" alt="book"></td>
  </tr>
<% end %>
</table>

<%= link_to 'New book', new_book_path %>
