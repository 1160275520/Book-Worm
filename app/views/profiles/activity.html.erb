<div class="container">
  <h1>My activity</h1>
</div>


<div class="container">
  <div><h3>My Books</h3></div>
  <div class="row">
    <% @profile.books_owned.each do |book|%>
    <div class="col-4">
      <div class="book-img" ></div>
      <a href="/books/<%= book.id %>"><%= book.title%></a>
      <div class="row">
        <div class="col">
          <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary btn-sm' %>
        </div>
        <div class="col">
          <%= link_to 'Destroy', book, :confirm => 'Are you sure?',
                                          :method => :delete, class: 'btn btn-danger btn-sm' %>
        </div>
      </div>
    </div>
    <% end %>
    
  </div>

  <div class="row">
    <div class="col-4">
      <h3>My shared books</h3>
        <ul>
          <% @profile.books_shared.each do |book|%>
            <li><a href="/books/<%= book.id %>"><%= book.title%></a></li>
          <% end%>
        </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <h3>My borrowed books</h3>
          <ul>
            <% @profile.books_borrowed.each do |book|%>
              <li><a href="/books/<%= book.id %>"><%= book.title%></a></li>
            <% end%>
          </ul>
    </div>
  </div>
  
</div>

<script type="text/javascript">
   $(function(){
    var books=loadBooks();
   })

</script>
