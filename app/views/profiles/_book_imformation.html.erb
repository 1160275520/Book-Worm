<div class="col-3" align="center">
     <div class="row">
        <a href="/books/<%= book.id %>"><%= book.title %></a>
     </div>
     <div class="row" >
        <img data-title="<%= book.title %>"  data-author="<%= book.author %>" class="book-img" id="<%= index %>" style="width: auto; padding: 20px;"alt="book">
     </div>
     <div class="row">
         <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-outline-success' %>
         <%= link_to 'Destroy', book, :confirm => 'Are you sure?',
                                         :method => :delete, class: 'btn btn-outline-warning' %>
      </div>
     </div>
</div>